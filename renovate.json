{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for ShelfBridge",
  "extends": [
    "config:recommended",
    ":enableVulnerabilityAlertsWithLabel",
    ":semanticCommitTypeAll(build)",
    "group:monorepos",
    "group:recommended",
    "workarounds:all"
  ],
  "timezone": "UTC",
  "schedule": ["before 10am on monday"],
  "labels": ["dependencies"],
  "assignees": ["rohit-purandare"],
  "reviewers": ["rohit-purandare"],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "build(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "prTitle": "build(deps): update {{depName}} to {{newVersion}}",
  "packageRules": [
    {
      "description": "HIGH CONFIDENCE: Mature, stable updates - proceed immediately",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["patch", "minor"],
      "matchPackageNames": [
        "@eslint/js",
        "eslint",
        "globals",
        "prettier",
        "cron",
        "nodemon",
        "winston",
        "js-yaml",
        "luxon",
        "commander",
        "husky",
        "lint-staged"
      ],
      "groupName": "high confidence npm dependencies",
      "labels": ["dependencies", "high-confidence"],
      "prTitle": "build(deps): update high confidence dependencies"
    },
    {
      "description": "LOW CONFIDENCE: New releases requiring review - manual approval needed",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["patch", "minor"],
      "matchPackageNames": [
        "cronstrue",
        "axios",
        "inquirer",
        "rate-limiter-flexible"
      ],
      "dependencyDashboardApproval": true,
      "groupName": "review required npm dependencies",
      "labels": ["dependencies", "review-required"],
      "prTitle": "build(deps): update dependencies requiring review"
    },
    {
      "description": "DEFAULT: All other npm dependencies require dashboard approval",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["patch", "minor"],
      "dependencyDashboardApproval": true,
      "groupName": "other npm dependencies",
      "labels": ["dependencies", "review-required"],
      "prTitle": "build(deps): update other dependencies"
    },
    {
      "description": "Group all GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "GitHub Actions",
      "labels": ["dependencies", "github-actions"]
    },
    {
      "description": "Separate major updates for careful review",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true,
      "labels": ["dependencies", "major"],
      "prTitle": "build(deps): update {{depName}} to {{newVersion}} (major)",
      "commitMessageAction": "update major version of"
    },
    {
      "description": "Auto-merge patch updates for development tools only",
      "matchPackageNames": ["eslint", "prettier", "@eslint/js", "globals"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge",
      "labels": ["dependencies", "automerge"]
    },
    {
      "description": "Pin better-sqlite3 to exact version due to native module constraints",
      "matchPackageNames": ["better-sqlite3"],
      "rangeStrategy": "pin",
      "labels": ["dependencies", "native-module"],
      "prTitle": "build(deps): pin {{depName}} to {{newVersion}}",
      "commitMessageAction": "pin"
    },
    {
      "description": "High-priority security updates (bypasses schedule and confidence)",
      "matchDatasources": ["npm"],
      "groupName": "security updates",
      "labels": ["dependencies", "security"],
      "prPriority": 10,
      "schedule": ["at any time"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["dependencies", "security", "vulnerability"],
    "assignees": ["rohit-purandare"],
    "reviewers": ["rohit-purandare"]
  },
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard",
  "dependencyDashboardHeader": "This issue lists Renovate updates and detected dependencies. Read the [Dependency Dashboard](https://docs.renovatebot.com/key-concepts/dashboard/) docs to learn more.",
  "dependencyDashboardLabels": ["dependencies", "renovate"],
  "rebaseWhen": "conflicted",
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "stabilityDays": 3,
  "branchPrefix": "renovate/",
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 4am on the first day of the month"],
    "commitMessageAction": "maintain",
    "commitMessageTopic": "lock file",
    "prTitle": "build(deps): maintain lock file"
  }
}
